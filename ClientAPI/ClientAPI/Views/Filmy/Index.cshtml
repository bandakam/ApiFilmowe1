@model IEnumerable<ClientAPI.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RokProdukcji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RezyserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RokProdukcji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RezyserId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id=item.Id, Nazwa=item.Nazwa, RokProdukcji=item.RokProdukcji, RezyserId = item.RezyserId}) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, Nazwa = item.Nazwa, RokProdukcji = item.RokProdukcji, RezyserId = item.RezyserId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, Nazwa = item.Nazwa, RokProdukcji = item.RokProdukcji, RezyserId = item.RezyserId })
            </td>
        </tr>
}
    </tbody>
</table>
